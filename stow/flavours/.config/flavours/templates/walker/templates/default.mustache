/* Theme variables - Tailwind CSS naming convention */
@define-color gray-50 rgba({{base07-rgb-r}}, {{base07-rgb-g}}, {{base07-rgb-b}}, 1.0);
@define-color gray-300 rgba({{base05-rgb-r}}, {{base05-rgb-g}}, {{base05-rgb-b}}, 0.8);
@define-color gray-400 rgba({{base04-rgb-r}}, {{base04-rgb-g}}, {{base04-rgb-b}}, 1.0);
@define-color gray-800 rgba({{base01-rgb-r}}, {{base01-rgb-g}}, {{base01-rgb-b}}, 0.4);
@define-color gray-900 rgba({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}}, 0.75);

@define-color red-500 rgba({{base08-rgb-r}}, {{base08-rgb-g}}, {{base08-rgb-b}}, 1.0);
@define-color green-500 rgba({{base0B-rgb-r}}, {{base0B-rgb-g}}, {{base0B-rgb-b}}, 1.0);

@define-color alpha-subtle rgba(255, 255, 255, 0.02);
@define-color alpha-light rgba(255, 255, 255, 0.05);
@define-color alpha-medium rgba(255, 255, 255, 0.1);
@define-color alpha-dark rgba(0, 0, 0, 0.5);

* {
  all: unset;
  font-family: "SF Pro Display", -apple-system, BlinkMacSystemFont, system-ui,
    sans-serif;
  font-size: 13px;
}

.normal-icons {
  -gtk-icon-size: 16px;
}

.large-icons {
  -gtk-icon-size: 21px;
}

scrollbar {
  opacity: 0;
}

scrollbar slider {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2px;
  min-height: 16px;
}

scrollbar slider:hover {
  background: rgba(255, 255, 255, 0.3);
}

.box-wrapper {
  background: @gray-900;
  border: 1px solid @alpha-subtle;
  border-radius: 10px;
  padding: 10px;
}

.preview-box,
.elephant-hint,
.placeholder {
  color: @gray-50;
  opacity: 0.6;
}

.search-container {
  background: alpha(@gray-400, 0.05);
  border: 1px solid @alpha-subtle;
  border-radius: 8px;
  padding: 1px;
}

.input {
  background: transparent;
  color: @gray-50;
  font-size: 13px;
  font-weight: 400;
  caret-color: @gray-50;
  padding: 8px 12px;
}

.input placeholder {
  color: @gray-50;
  opacity: 0.4;
}

.input:focus,
.input:active {
  border-color: @alpha-subtle;
}

.list {
  color: @gray-50;
}

child {
}

.item-box {
  background: transparent;
  border-radius: 8px;
  padding: 7px 8px;
  border: 1px solid transparent;
  transition: all 0.12s easeOut;
}

.item-quick-activation {
  background: alpha(@gray-400, 0.15);
  border-radius: 8px;
  padding: 10px;
}

child:hover .item-box {
  background: @gray-800;
  border-color: @alpha-subtle;
}

child:selected .item-box {
  background: rgba(255, 255, 255, 0.06);
  border-color: @alpha-subtle;
}

.item-text-box {
  margin: 0;
  padding: 0;
}

.item-text {
  color: @gray-50;
  font-size: 13px;
  font-weight: 400;
  line-height: 1.2;
  margin: 0;
  padding: 0;
  vertical-align: middle;
}

.item-subtext {
  font-size: 11px;
  opacity: 0.5;
}

.item-icon {
  margin-right: 10px;
  margin-top: 1px;
  -gtk-icon-size: 16px;
}

.item-activation-label {
  color: @gray-50;
  opacity: 0.6;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-left: 8px;
}

.calc-display {
  font-size: 20px;
  font-weight: 300;
  color: @gray-50;
  padding: 8px;
}

.todo-item {
  transition: opacity 0.2s ease;
}

.todo-item.active {
  font-weight: 500;
}

.todo-item.done {
  opacity: 0.4;
  text-decoration: line-through;
}

.bluetooth-item.disconnected {
  opacity: 0.5;
}

.symbol-item {
  font-size: 20px;
}

.keybinds {
  opacity: 0;
  font-size: 0px;
  margin: 0;
  padding: 0;
  min-height: 0;
  max-height: 0;
}

.error {
  background: @red-500;
  color: white;
  padding: 12px;
  border-radius: 10px;
  margin-top: 8px;
}

.ai-item {
  background: @gray-800;
  border: 1px solid @alpha-subtle;
  border-radius: 12px;
  padding: 12px 16px;
  margin: 6px 0;
  color: @gray-50;
}

.ai-item.user {
  background: alpha(@gray-400, 0.2);
}

.ai-item.assistant {
  background: @gray-800;
}

.password {
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid @alpha-subtle;
  border-radius: 12px;
  padding: 12px 16px;
}
