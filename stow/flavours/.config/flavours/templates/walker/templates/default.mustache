/* Theme variables - Base16 colors (use alpha() function for opacity) */

/* Base16 grayscale */
@define-color base00 rgb({{base00-rgb-r}}, {{base00-rgb-g}}, {{base00-rgb-b}});
@define-color base01 rgb({{base01-rgb-r}}, {{base01-rgb-g}}, {{base01-rgb-b}});
@define-color base02 rgb({{base02-rgb-r}}, {{base02-rgb-g}}, {{base02-rgb-b}});
@define-color base03 rgb({{base03-rgb-r}}, {{base03-rgb-g}}, {{base03-rgb-b}});
@define-color base04 rgb({{base04-rgb-r}}, {{base04-rgb-g}}, {{base04-rgb-b}});
@define-color base05 rgb({{base05-rgb-r}}, {{base05-rgb-g}}, {{base05-rgb-b}});
@define-color base06 rgb({{base06-rgb-r}}, {{base06-rgb-g}}, {{base06-rgb-b}});
@define-color base07 rgb({{base07-rgb-r}}, {{base07-rgb-g}}, {{base07-rgb-b}});

/* Base16 accent colors */
@define-color base08 rgb({{base08-rgb-r}}, {{base08-rgb-g}}, {{base08-rgb-b}});
@define-color base09 rgb({{base09-rgb-r}}, {{base09-rgb-g}}, {{base09-rgb-b}});
@define-color base0A rgb({{base0A-rgb-r}}, {{base0A-rgb-g}}, {{base0A-rgb-b}});
@define-color base0B rgb({{base0B-rgb-r}}, {{base0B-rgb-g}}, {{base0B-rgb-b}});
@define-color base0C rgb({{base0C-rgb-r}}, {{base0C-rgb-g}}, {{base0C-rgb-b}});
@define-color base0D rgb({{base0D-rgb-r}}, {{base0D-rgb-g}}, {{base0D-rgb-b}});
@define-color base0E rgb({{base0E-rgb-r}}, {{base0E-rgb-g}}, {{base0E-rgb-b}});
@define-color base0F rgb({{base0F-rgb-r}}, {{base0F-rgb-g}}, {{base0F-rgb-b}});

/* Alpha overlays (design tokens - not theme colors) */
@define-color alpha-subtle rgba(255, 255, 255, 0.02);
@define-color alpha-light rgba(255, 255, 255, 0.05);
@define-color alpha-medium rgba(255, 255, 255, 0.1);
@define-color alpha-dark rgba(0, 0, 0, 0.5);

* {
  all: unset;
  font-family: "SF Pro Display", -apple-system, BlinkMacSystemFont, system-ui,
    sans-serif;
  font-size: 13px;
}

.normal-icons {
  -gtk-icon-size: 16px;
}

.large-icons {
  -gtk-icon-size: 21px;
}

.box-wrapper {
  background: alpha(@base00, 0.3);
  border: 1px solid @alpha-subtle;
  border-radius: 10px;
  padding: 10px;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
}

.preview-box,
.elephant-hint,
.placeholder {
  color: white;
  opacity: 0.6;
}

.search-container {
  background: alpha(@base01, 0.2);
  border: 1px solid @alpha-subtle;
  border-radius: 8px;
  padding: 1px;
}

.input {
  background: transparent;
  color: white;
  font-size: 13px;
  font-weight: 400;
  caret-color: white;
  padding: 8px 12px;
}

.input placeholder {
  color: white;
  opacity: 0.4;
}

.input:focus,
.input:active {
  border-color: @alpha-subtle;
}

.list {
  color: white;
}

child {
}

.item-box {
  background: transparent;
  border-radius: 8px;
  padding: 7px 8px;
  border: 1px solid transparent;
  transition: all 0.12s easeOut;
}

.item-quick-activation {
  background: alpha(@base04, 0.15);
  border-radius: 8px;
  padding: 10px;
}

child:hover .item-box {
  background: alpha(@base01, 0.4);
  border-color: @alpha-subtle;
}

child:selected .item-box {
  background: rgba(255, 255, 255, 0.06);
  border-color: @alpha-subtle;
}

.item-text-box {
  margin: 0;
  padding: 0;
}

.item-text {
  color: white;
  font-size: 13px;
  font-weight: 400;
  line-height: 1.2;
  margin: 0;
  padding: 0;
  vertical-align: middle;
}

.item-subtext {
  font-size: 11px;
  opacity: 0.5;
}

.item-icon {
  margin-right: 10px;
  margin-top: 1px;
  -gtk-icon-size: 16px;
}

.item-activation-label {
  color: white;
  opacity: 0.6;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-left: 8px;
}

.calc-display {
  font-size: 20px;
  font-weight: 300;
  color: white;
  padding: 8px;
}

.todo-item {
  transition: opacity 0.2s ease;
}

.todo-item.active {
  font-weight: 500;
}

.todo-item.done {
  opacity: 0.4;
  text-decoration: line-through;
}

.bluetooth-item.disconnected {
  opacity: 0.5;
}

.symbol-item {
  font-size: 20px;
}

.keybinds {
  opacity: 0;
  font-size: 0px;
  margin: 0;
  padding: 0;
  min-height: 0;
  max-height: 0;
}

.error {
  background: @base08;
  color: white;
  padding: 12px;
  border-radius: 10px;
  margin-top: 8px;
}

.ai-item {
  background: alpha(@base01, 0.4);
  border: 1px solid @alpha-subtle;
  border-radius: 12px;
  padding: 12px 16px;
  margin: 6px 0;
  color: @base07;
}

.ai-item.user {
  background: alpha(@base04, 0.2);
}

.ai-item.assistant {
  background: alpha(@base01, 0.4);
}

.password {
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid @alpha-subtle;
  border-radius: 12px;
  padding: 12px 16px;
}
