#!/bin/bash

# Launch bluetui with single instance support

TERMINAL_TITLE="bluetui"
COMMAND="bluetui"

# Check if bluetui is already running
if hyprctl clients | grep -q "^[[:space:]]*title: $TERMINAL_TITLE$"; then
    # Focus the existing window
    hyprctl dispatch focuswindow title:"$TERMINAL_TITLE"
else
    # Launch new instance with proper environment
    ${TERMINAL:-xterm} --title "$TERMINAL_TITLE" --hold -e "$COMMAND" 2>/dev/null &
fi